{
  "diagnostic":{
      "displayByAle": true,
  },
  "languageserver": {
    "go": {
      "command": "gopls",
      "rootPatterns": ["go.mod"],
      "trace.server": "verbose",
      "filetypes": ["go"],
    },
    "julia": {
        "command": "julia",
        "args" : [
            "--startup-file=no",
            "--history-file=no",
            "-e",
            "using LanguageServer; server = LanguageServer.LanguageServerInstance(STDIN, STDOUT, false); server.runlinter = true; run(server);"],
        "filetypes": ["julia"],
    }
  },
  "python": {
      "pythonPath": "~/Miniconda3/python.exe",
      "jediEnabled": false
  },
  "html": {
      "autoClosingTags": true,
  },
}
